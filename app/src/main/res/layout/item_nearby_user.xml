<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivAcatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_user_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/nickname"
        android:textColor="@color/textColorBlak1"
        app:layout_constraintStart_toEndOf="@+id/ivAcatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivGanderTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/gender_man"
        app:layout_constraintBottom_toBottomOf="@+id/tvNickName"
        app:layout_constraintStart_toEndOf="@+id/tvNickName"
        app:layout_constraintTop_toTopOf="@+id/tvNickName" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/textColorGray"
        app:layout_constraintStart_toStartOf="@+id/tvNickName"
        app:layout_constraintTop_toBottomOf="@+id/tvNickName" />

</androidx.constraintlayout.widget.ConstraintLayout>