<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/pay_success" />

    <TextView
        android:id="@+id/tvSuccessfulShowTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/black_33"
        tools:text="@string/whitdrawal_success_tip" />

    <TextView
        android:id="@+id/tvSuccessfulShowAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/black_33"
        android:textSize="40sp"
        tools:text="100AR" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSuccessfulShowTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:text="@string/withdrawal_amount"
            android:textColor="@color/black_33"
            android:textSize="15sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvSuccessfulShowTotalPoundage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="35dp"
            android:text="@string/order_poundage"
            android:textColor="@color/black_33"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSuccessfulShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@drawable/solid_shape_red_50dp"
        android:gravity="center"
        android:paddingStart="85dp"
        android:paddingTop="15dp"
        android:paddingEnd="85dp"
        android:paddingBottom="15dp"
        android:text="@string/confirm"
        android:textColor="@color/white" />

</LinearLayout>