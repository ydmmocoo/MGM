<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.fjx.mg.view.RoundImageView
        android:id="@+id/iv_pic"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/big_image_default"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_alignStart="@+id/iv_pic"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/iv_pic"
        android:layout_marginTop="5dp"
        tools:text="巧克力镜面蛋糕"/>

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="500"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_alignStart="@+id/iv_pic"
        android:layout_below="@+id/tv_goods_name"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/tv_goods_price"
        android:layout_toEndOf="@+id/tv_goods_price"
        android:text="AR"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>