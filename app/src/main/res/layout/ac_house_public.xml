<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <include layout="@layout/line" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/shape_line"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:id="@+id/llType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/CommonPaddingStyle"
                    android:layout_weight="1"
                    android:text="@string/spublish_type"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="求职"
                    android:textColor="@color/textColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tvTitleHint"
                    style="@style/CommonPaddingStyle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="end"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/CommonPaddingStyle"
                    android:layout_weight="1"
                    android:text="@string/area"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textColor" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/CommonPaddingStyle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="面积"
                    android:textColor="@color/textColor" />


                <EditText
                    android:id="@+id/etArea"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:paddingEnd="10dp"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="m²"
                    android:textColor="@color/textColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tvMoneyHint"
                    style="@style/CommonPaddingStyle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/etMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="end"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llHtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/CommonPaddingStyle"
                    android:layout_weight="1"
                    android:text="@string/house_type"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/tvHtype"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textColor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/CommonPaddingStyle"
                    android:layout_weight="1"
                    android:text="@string/communication_language"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tvContact"
                    style="@style/CommonPaddingStyle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Contacts"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/etContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="end"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    style="@style/CommonPaddingStyle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_mobile"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="end"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    style="@style/CommonPaddingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mg_code1"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/tvMgCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etDesc"
                    style="@style/CommonPaddingStyle"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="@string/house_describe1"
                    android:minHeight="50dp"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/imageRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llExpire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingStart="12dp"
                android:paddingTop="15dp"
                android:paddingEnd="12dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="展示期限"
                    android:textColor="@color/textColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="(到期自动失效)"
                    android:textColor="@color/textColorGray" />

                <TextView
                    android:id="@+id/tvExpire"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textColor" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvCommit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="40dp"
                android:background="@drawable/solid_nomal_shape"
                android:gravity="center"
                android:text="@string/spublish"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>