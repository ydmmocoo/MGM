<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shape_line"
        android:orientation="vertical"
        android:showDividers="middle">


        <LinearLayout
            android:id="@+id/llPhone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/mobile_num_dot"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llSmsCode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:divider="@drawable/shape_line"
            android:gravity="center_vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/smsCode_dot"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/etSmsCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/login_input_smscode"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvGetSmsCode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/getSmscode"
                android:textColor="@color/textColorAccent" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llOldPwd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:divider="@drawable/shape_line"
            android:gravity="center_vertical"
            android:showDividers="middle"
            android:visibility="visible">

            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/old_password_dot"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/etOldPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/hint_input_oldpassword"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:divider="@drawable/shape_line"
            android:gravity="center_vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/setpassword_dot"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/etNewPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/set_new_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:divider="@drawable/shape_line"
            android:gravity="center_vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/confirm_password_dot"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/etConfirmPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/reinput_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/hint_password_desc"
                android:textColor="@color/textColorGray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="这是您在进行付款业务时的支付密码，请牢记。"
                android:textColor="@color/textColorGray"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/solid_nomal_shape"
        android:gravity="center"
        android:text="@string/makesure"
        android:textColor="@color/white" />
</LinearLayout>