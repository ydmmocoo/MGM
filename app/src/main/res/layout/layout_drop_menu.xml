<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area_screening"
            android:textColor="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProvince"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:background="@color/colorGrayBg"
                android:drawableEnd="@drawable/down_arrow"
                android:gravity="center"
                android:hint="@string/select_province"
                android:padding="5dp"
                android:textColor="@color/textColorGray" />

            <View
                android:layout_width="16dp"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/textColorGray" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:background="@color/colorGrayBg"
                android:drawableEnd="@drawable/down_arrow"
                android:gravity="center"
                android:hint="@string/select_city"
                android:padding="5dp"
                android:textColor="@color/textColorGray" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/industry_screening"
            android:textColor="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFirstSort"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:background="@color/colorGrayBg"
                android:drawableEnd="@drawable/down_arrow"
                android:gravity="center"
                android:hint="@string/select_big_type"
                android:padding="5dp"
                android:textColor="@color/textColorGray" />

            <View
                android:layout_width="16dp"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/textColorGray" />

            <TextView
                android:id="@+id/tvSecondSort"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:background="@color/colorGrayBg"
                android:drawableEnd="@drawable/down_arrow"
                android:gravity="center"
                android:hint="@string/select_small_type"
                android:padding="5dp"
                android:textColor="@color/textColorGray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvReset"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:background="@drawable/solid_shape_yellow"
                android:gravity="center"
                android:text="@string/reset"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:background="@drawable/solid_shape_red"
                android:gravity="center"
                android:text="@string/confirm1"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/viewTrans"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/dialogTransColor" />

</LinearLayout>