<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/ivRecommendPic"
        android:layout_width="112dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/defaut_img_bg" />

    <TextView
        android:id="@+id/tvRecommendTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/ivRecommendPic"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="提前退休真的来了，6月1日实施！" />

    <TextView
        android:id="@+id/tvRecommendAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRecommendTitle"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxEms="6"
        android:maxLines="1"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        tools:text="爱上阅读爱上阅读爱上阅读" />

    <TextView
        android:id="@+id/tvRecommendCommentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRecommendTitle"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@id/tvRecommendTime"
        android:layout_marginEnd="45dp"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        tools:text="12评论" />

    <TextView
        android:id="@+id/tvRecommendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRecommendTitle"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/ivRecommendPic"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        tools:text="一分钟前" />

</RelativeLayout>