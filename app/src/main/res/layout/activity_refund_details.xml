<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"/>

    <TextView
        android:id="@+id/tv_refund_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:text="@string/food_refund_amount"/>

    <TextView
        android:id="@+id/tv_return_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:text="@string/food_return_account"/>

    <TextView
        android:id="@+id/tv_refund_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:text="@string/food_refund_reason"/>

    <TextView
        android:id="@+id/tv_refund_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:text="@string/food_refund_status"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="invisible"
        android:background="@color/gray_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:visibility="invisible"
        android:paddingBottom="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/refund_process"/>

    <ListView
        android:id="@+id/lv_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:background="@color/white"
        android:scrollbars="none"
        android:paddingTop="15dp"
        android:visibility="invisible"
        android:paddingBottom="15dp"
        android:dividerHeight="0dp"/>

</LinearLayout>