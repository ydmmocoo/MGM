<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/textColorAccent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:padding="10dp"
            android:src="@drawable/title_bar_back"
            android:tint="@color/white_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivBack"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="@string/send_red_packet" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/textColorAccent">

        <TextView
            android:id="@+id/tvLuckyRedPacket"
            android:layout_width="107dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="54dp"
            android:background="@drawable/send_group_red_packet_text_select"
            android:gravity="center"
            android:text="@string/Lucky_red_packet"
            android:textColor="@color/c_d02934"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvCommonRedPacket"
            android:layout_width="107dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            android:background="@drawable/send_group_red_packet_text_unselect"
            android:gravity="center"
            android:text="@string/common_red_packet"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAmountTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/total_amount"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etInputAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:gravity="center_vertical|right"
            android:hint="@string/input_amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="AR"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/red_packet_num"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <EditText
            android:inputType="number"
            android:id="@+id/etInputUnit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="@string/input_num" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/unit"
            android:textColor="@color/textColor"
            android:textSize="15sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/etSay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="@string/default_package_message"
        android:paddingStart="10dp" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvSendRedPacket"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/solid_nomal_shape"
        android:gravity="center"
        android:text="@string/send_red_packet"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>